@{
    ViewData["Title"] = "Перевозки";
}
@model SpisokModel
<div class="text-center text-info">
    <h1>Перевозки</h1>
</div>
<p>
    @Html.ActionLink("Добавить перевозку", "Create")
</p>
<form method="get">
    <div class="form-inline">
        <label class="control-label">Команда: </label>
        @Html.DropDownList("team", Model.Reis as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Позиция игрока: </label>
        @Html.DropDownList("position", Model.Reis as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <tr>
        <td>Пункт отправления</td>
        <td>Пункт прибытия</td>
        <td>Название</td>
        <td>Цена</td>
        <td>Длительность</td>
    </tr>
    @foreach (var reis in ViewBag.reiss)
    {
        <tr>
            <td>@reis.OfId</td>
            <td>@reis.ToId</td>
            <td>@reis.Name</td>
            <td>@reis.Cena</td>
            <td>@reis.Time</td>
        </tr>
    }
</table>