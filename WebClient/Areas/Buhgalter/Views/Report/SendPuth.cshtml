@model WebClient.Areas.Buhgalter.Models.ReportModel

@{ ViewData["Title"] = "Выбор пути"; } 

<div class="text-left text-info">
    <h1>@ViewData["Title"]</h1>
</div>
@using (Html.BeginForm("Validation", "Report", new { id = ViewBag.Id, did = ViewBag.Did, Month = ViewBag.Month }))
{
    <p>
        Путь сохранения:<br>
        @Html.TextBoxFor(x => x.puth, new { @Value = "D:\\report-kursovaa\\" })<br>
        Почта:<br>
        @Html.EditorFor(model => model.SendMail) Отправить отчёт на почту
    </p>
    @Html.ValidationSummary(true, "", new { @style = "color: blue" })
    <input type="submit" value="Отправить" class="btn btn-info btn-sm" />
}
